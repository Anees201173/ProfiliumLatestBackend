# Server Configuration
PORT=5000
NODE_ENV=development

# Neon Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://user:password@your-neon-hostname/database_name?sslmode=require

# Alternative format if you prefer separate variables
DB_HOST=your-neon-hostname
DB_PORT=5432
DB_NAME=database_name
DB_USER=your_username
DB_PASSWORD=your_password
DB_SSL=true

# JWT Secret (for authentication)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d

# CORS
CORS_ORIGIN=http://localhost:3000
